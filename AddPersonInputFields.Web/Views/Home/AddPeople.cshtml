@using AddPersonInputFields.Data

<div class="container mt-5 col-8">
    <button class="btn btn-block btn-outline-dark" id="add-row">Add Row</button>
    <form action="/home/submitpeople" method="POST">
        <div id="input-people">
            <div class="row justify-content-center mt-4">
                <div class="col-md-4">
                    <input type="text" name="people[0].firstName" class="form-control" placeholder="First Name" />
                </div>
                <div class="col-md-4">
                    <input type="text" name="people[0].lastName" class="form-control" placeholder="Last Name" />
                </div>
                <div class="col-md-4">
                    <input type="number" name="people[0].age" class="form-control" placeholder="Age" />
                </div>
            </div>
        </div>
        <button class="btn btn-primary mt-2 btn-block">Submit</button>
    </form>
</div>